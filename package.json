{
  "name": "osm2streets-vector-tileserver",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "watch-build-start": "ls src/*.* | entr -rcs \"npm run  build && npm run start\"",
    "start": "node  --trace-warnings  ./dist/app.js 2> /dev/null",
    "start:show-errors": "node  --trace-warnings  ./dist/app.js",
    "build": "tsc",
    "test": "npx jest test/*",
    "test:watch": "ls test/*.ts src/*.ts src/**/*.ts | entr -rcs 'yarn test'"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@types/cache-manager": "^4.0.2",
    "cache-manager": "^5.1.4",
    "geojson-vt": "^3.2.1",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.0",
    "koa-swagger-decorator": "^1.8.6",
    "osm2streets-js-node": "^0.1.2",
    "reflect-metadata": "^0.1.13",
    "vt-pbf": "^3.1.3"
  },
  "devDependencies": {
    "@types/geojson-vt": "^3.2.0",
    "@types/jest": "^29.2.5",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-helmet": "^6.0.4",
    "@types/koa-json": "^2.0.20",
    "@types/koa-logger": "^3.1.2",
    "@types/koa-router": "^7.4.4",
    "@types/mapbox__vector-tile": "^1.3.0",
    "@types/node": "^18.11.17",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  }
}
